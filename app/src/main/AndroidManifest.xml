<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.ucai.fulicenter">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".FuLiCenterApplication"
        android:allowBackup="true"
        android:icon="@mipmap/launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".acitivity.MainActivity" />
        <activity android:name=".acitivity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".acitivity.GoodsDetailActivity" />
        <activity android:name=".acitivity.BoutiqueChildActivity" />
        <activity android:name=".acitivity.CategoryChildActivity" />
        <activity android:name=".acitivity.LoginActivity" />
        <activity android:name=".acitivity.RegisterActivity" />
        <activity android:name=".acitivity.UserProfileActivity" />
        <activity android:name=".acitivity.UpdateNickActivity" />
        <activity android:name=".acitivity.CollectsActivity"></activity>
    </application>

</manifest>