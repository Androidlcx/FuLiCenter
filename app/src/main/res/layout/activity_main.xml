<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/image"
        android:src="@mipmap/goods_thumb"
        android:layout_width="match_parent"
        android:layout_height="520dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <RadioButton
             android:id="@+id/xp"
             android:layout_weight="1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="新品"
             android:drawableTop="@drawable/selector_menu_item_new_good"
             android:button="@null"
             android:gravity="center"
             android:textColor="@color/main_botton_text_color"/>
    <RadioButton
        android:id="@+id/jx"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="精选"
        android:drawableTop="@drawable/selector_menu_item_boutique"
        android:button="@null"
        android:gravity="center"
        android:textColor="@color/main_botton_text_color"/>
    <RadioButton
        android:id="@+id/fl"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分类"
        android:drawableTop="@drawable/selector_menu_item_category"
        android:button="@null"
        android:gravity="center"
        android:textColor="@color/main_botton_text_color"/>
    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvcart"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:textColor="#fff"
            android:background="@drawable/cart_hint"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"/>
        <RadioButton
            android:id="@+id/gwc"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物车"
            android:drawableTop="@drawable/selector_menu_item_cart"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/main_botton_text_color"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RadioButton
        android:id="@+id/me"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人中心"
        android:drawableTop="@drawable/selector_menu_item_personal_center"
        android:button="@null"
        android:gravity="center"
        android:textColor="@color/main_botton_text_color"/>
    </LinearLayout>
</LinearLayout>
