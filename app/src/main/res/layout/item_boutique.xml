<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_boutique_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">
    <!--精选页面布局-->
    <!--商品图片显示区域-->
      <ImageView
          android:id="@+id/ivBoutiqueImg"
          android:layout_width="200dp"
          android:layout_height="200dp"
          android:src="@drawable/nopic"
          android:scaleType="fitXY"/>
    <!--商品的标题名称介绍布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="top"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_toRightOf="@id/ivBoutiqueImg"
        android:background="@color/white">
        <!--商品标题-->
        <TextView
            android:id="@+id/tvBoutiqueTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/list_item_title"
            android:layout_marginTop="15dp"
            android:ellipsize="end"
            android:textSize="15sp"
            android:text="Aug 28 201"/>
        <!--商品名称-->
        <TextView
            android:id="@+id/tvBoutiqueName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/list_item_name"
            android:layout_marginTop="15dp"
            android:ellipsize="end"
            android:textSize="15sp"
            android:text="冬季衣橱大换血"/>
        <!--商品介绍-->
        <TextView
            android:id="@+id/tvBoutiqueDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_normal"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:textSize="15sp"
            android:maxLines="2"
            android:text="2015 F/M Trends Report"/>
    </LinearLayout>
</RelativeLayout>